<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ar.franciscoruiz.workouts.steps.domain.Step" table="steps">
        <id column="id" name="id" length="36" access="field"/>

        <property name="description" column="description" type="java.lang.String" access="field"/>

        <property name="stepTypeId" column="step_type_id" type="java.lang.String" access="field"/>

        <property name="workoutId" column="workout_id" type="java.lang.String" access="field"/>
    </class>
</hibernate-mapping>
