<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ar.franciscoruiz.workouts.workout_users.domain.WorkoutUser" table="workout_users">
        <composite-id name="id" class="ar.franciscoruiz.workouts.step_types.domain.WorkoutUserId" access="field">
            <key-property column="id" name="value" length="36" access="field"/>
        </composite-id>

        <component name="workoutId" class="ar.franciscoruiz.workouts.workouts.domain.WorkoutId" access="field">
            <property name="value" column="workout_id" type="java.lang.String" access="field"/>
        </component>

        <component name="userId" class="ar.franciscoruiz.shared.domain.users.UserId" access="field">
            <property name="value" column="user_id" type="java.lang.String" access="field"/>
        </component>
    </class>
</hibernate-mapping>
