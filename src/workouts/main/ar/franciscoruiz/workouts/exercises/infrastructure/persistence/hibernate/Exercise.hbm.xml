<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ar.franciscoruiz.workouts.exercises.domain.Exercise" table="exercises">
        <id column="id" name="id" length="36" access="field"/>

        <property name="description" column="description" type="java.lang.String" access="field"/>

        <property name="mediaUrl" column="media_url" type="java.lang.String" access="field"/>
    </class>
</hibernate-mapping>
