<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ar.franciscoruiz.workouts.exercises.domain.Exercise" table="exercises">
        <composite-id name="id" class="ar.franciscoruiz.workouts.exercises.domain.ExerciseId" access="field">
            <key-property column="id" name="value" length="36" access="field"/>
        </composite-id>

        <component name="description" class="ar.franciscoruiz.workouts.exercises.domain.ExerciseDescription"
                   access="field">
            <property name="value" column="description" type="java.lang.String" access="field"/>
        </component>

        <component name="mediaUrl" class="ar.franciscoruiz.workouts.exercises.domain.ExerciseMediaUrl" access="field">
            <property name="value" column="media_url" type="java.lang.String" access="field"/>
        </component>
    </class>
</hibernate-mapping>
