<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ar.franciscoruiz.accounts.purchase_items.domain.PurchaseItem" table="purchase_items">
        <composite-id name="id" class="ar.franciscoruiz.accounts.purchase_items.domain.PurchaseItemId"
                      access="field">
            <key-property column="id" name="value" length="36" access="field"/>
        </composite-id>

        <component name="quantity" class="ar.franciscoruiz.accounts.purchase_items.domain.PurchaseItemQuantity"
                   access="field">
            <property name="value" column="quantity" type="java.lang.Integer" access="field"/>
        </component>

        <component name="membershipId" class="ar.franciscoruiz.accounts.memberships.domain.MembershipId"
                   access="field">
            <property name="value" column="membership_id" type="java.lang.String" access="field"/>
        </component>

    </class>
</hibernate-mapping>
