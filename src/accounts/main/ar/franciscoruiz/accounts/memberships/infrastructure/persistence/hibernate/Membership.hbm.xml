<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ar.franciscoruiz.accounts.memberships.domain.Membership" table="memberships">
        <composite-id name="id" class="ar.franciscoruiz.accounts.memberships.domain.MembershipId" access="field">
            <key-property column="id" name="value" length="36" access="field"/>
        </composite-id>

        <component name="description" class="ar.franciscoruiz.accounts.memberships.domain.MembershipDescription"
                   access="field">
            <property name="value" column="description" type="java.lang.String" access="field"/>
        </component>

        <component name="companyId" class="ar.franciscoruiz.accounts.companies.domain.CompanyId"
                   access="field">
            <property name="value" column="company_id" type="java.lang.String" access="field" length="36"/>
        </component>

        <component name="numberDaysEnabled"
                   class="ar.franciscoruiz.accounts.memberships.domain.MembershipNumberDaysEnabled"
                   access="field">
            <property name="value" column="number_days_enabled" type="java.lang.Integer" access="field"/>
        </component>

        <component name="price" class="ar.franciscoruiz.accounts.memberships.domain.MembershipPrice"
                   access="field">
            <property name="value" column="price" type="java.lang.Double" access="field"/>
        </component>

        <component name="isActive" class="ar.franciscoruiz.accounts.memberships.domain.MembershipIsActive"
                   access="field">
            <property name="value" column="is_active" type="java.lang.Boolean" access="field"/>
        </component>
    </class>
</hibernate-mapping>
