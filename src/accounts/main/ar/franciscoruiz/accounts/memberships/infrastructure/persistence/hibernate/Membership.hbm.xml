<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ar.franciscoruiz.accounts.memberships.domain.Membership" table="memberships">
        <id name="id" column="id" access="field" length="36"/>

        <property name="description" column="description" type="java.lang.String" access="field"/>

        <property name="companyId" column="company_id" type="java.lang.String" access="field" length="36"/>

        <property name="numberDaysEnabled" column="number_days_enabled" type="java.lang.Integer" access="field"/>

        <property name="price" column="price" type="java.lang.Double" access="field"/>

        <property name="isActive" column="is_active" type="java.lang.Boolean" access="field"/>
    </class>
</hibernate-mapping>
