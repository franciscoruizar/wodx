<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ar.franciscoruiz.accounts.user_memberships.domain.UserMembership" table="user_memberships">
        <composite-id name="id" class="ar.franciscoruiz.accounts.user_memberships.domain.UserMembershipId"
                      access="field">
            <key-property column="id" name="value" length="36" access="field"/>
        </composite-id>

        <property name="dateFrom" column="date_from" type="java.time.LocalDate" access="field"/>

        <property name="dateTo" column="date_to" type="java.time.LocalDate" access="field"/>

        <component name="membershipId" class="ar.franciscoruiz.accounts.memberships.domain.MembershipId" access="field">
            <property name="value" column="membership_id" type="java.lang.String" length="36" access="field"/>
        </component>

        <component name="userId" class="ar.franciscoruiz.shared.domain.users.UserId" access="field">
            <property column="user_id" name="value" length="36" access="field"/>
        </component>
    </class>
</hibernate-mapping>
