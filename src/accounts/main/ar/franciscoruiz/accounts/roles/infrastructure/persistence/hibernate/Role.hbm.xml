<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ar.franciscoruiz.accounts.roles.domain.Role" table="roles">
        <composite-id name="id" class="ar.franciscoruiz.shared.domain.roles.RoleId" access="field">
            <key-property column="id" name="value" length="36" access="field"/>
        </composite-id>

        <component name="description" class="ar.franciscoruiz.accounts.roles.domain.RoleDescription" access="field">
            <property name="value" column="description" type="java.lang.String" access="field"/>
        </component>
    </class>
</hibernate-mapping>
