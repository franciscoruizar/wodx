<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ar.franciscoruiz.accounts.sign_up.domain.SignUpUser" table="users">
        <composite-id name="id" class="ar.franciscoruiz.accounts.sign_up.domain.SignUpUserId" access="field">
            <key-property column="id" name="value" length="36" access="field"/>
        </composite-id>

        <component name="name" class="ar.franciscoruiz.accounts.sign_up.domain.SignUpUserName" access="field">
            <property name="value" column="name" type="java.lang.String" access="field"/>
        </component>

        <component name="surname" class="ar.franciscoruiz.accounts.sign_up.domain.SignUpUserSurname" access="field">
            <property name="value" column="surname" type="java.lang.String" access="field"/>
        </component>

        <component name="email" class="ar.franciscoruiz.accounts.sign_up.domain.SignUpUserEmail" access="field">
            <property name="value" column="email" type="java.lang.String" access="field"/>
        </component>

        <component name="password" class="ar.franciscoruiz.accounts.sign_up.domain.SignUpUserPassword" access="field">
            <property name="value" column="password" type="java.lang.String" access="field"/>
        </component>

        <component name="phone" class="ar.franciscoruiz.accounts.sign_up.domain.SignUpUserPhone" access="field">
            <property name="value" column="phone" type="java.lang.String" access="field"/>
        </component>

        <component name="roleId" class="ar.franciscoruiz.accounts.roles.domain.RoleId" access="field">
            <property name="value" column="role_id" type="java.lang.String" access="field"/>
        </component>
    </class>
</hibernate-mapping>
