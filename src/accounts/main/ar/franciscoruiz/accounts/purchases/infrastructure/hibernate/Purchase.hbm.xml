<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ar.franciscoruiz.accounts.purchases.domain.Purchase" table="purchases">
        <id name="id" column="id" access="field" length="36"/>

        <property name="description" column="description" type="java.lang.String" access="field"/>

        <property name="date" column="date" type="java.time.LocalDateTime" access="field" length="36"/>

        <property name="userId" column="user_id" type="java.lang.String" access="field"/>
    </class>
</hibernate-mapping>
