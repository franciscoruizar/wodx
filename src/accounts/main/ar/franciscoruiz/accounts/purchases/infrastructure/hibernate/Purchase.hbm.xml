<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ar.franciscoruiz.accounts.purchases.domain.Purchase" table="purchases">
        <composite-id name="id" class="ar.franciscoruiz.accounts.purchases.domain.PurchaseId" access="field">
            <key-property column="id" name="value" length="36" access="field"/>
        </composite-id>

        <component name="description" class="ar.franciscoruiz.accounts.purchases.domain.PurchaseDescription"
                   access="field">
            <property name="value" column="description" type="java.lang.String" access="field"/>
        </component>

        <property name="date" column="date" type="java.time.LocalDateTime" access="field"/>

        <component name="userId" class="ar.franciscoruiz.shared.domain.users.UserId" access="field">
            <property name="value" column="user_id" type="java.lang.String" access="field" length="36"/>
        </component>

        <component name="companyId" class="ar.franciscoruiz.accounts.companies.domain.CompanyId" access="field">
            <property name="value" column="company_id" type="java.lang.String" access="field"/>
        </component>
    </class>
</hibernate-mapping>
