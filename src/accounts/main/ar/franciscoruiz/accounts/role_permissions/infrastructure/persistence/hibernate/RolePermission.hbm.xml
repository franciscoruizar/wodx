<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ar.franciscoruiz.accounts.role_permissions.domain.RolePermission" table="role_permissions">
        <composite-id name="id" class="ar.franciscoruiz.accounts.role_permissions.domain.RolePermissionId"
                      access="field">
            <key-property column="id" name="value" length="36" access="field"/>
        </composite-id>

        <component name="roleId" class="ar.franciscoruiz.accounts.roles.domain.RoleId" access="field">
            <property name="value" column="role_id" type="java.lang.String" access="field"/>
        </component>

        <component name="permissionId" class="ar.franciscoruiz.accounts.permissions.domain.PermissionId" access="field">
            <property name="value" column="permission_id" type="java.lang.String" access="field"/>
        </component>
    </class>
</hibernate-mapping>
