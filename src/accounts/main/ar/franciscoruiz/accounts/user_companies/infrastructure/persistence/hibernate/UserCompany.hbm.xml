<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ar.franciscoruiz.accounts.user_companies.domain.UserCompany" table="user_companies">
        <composite-id name="id" class="ar.franciscoruiz.accounts.user_companies.domain.UserCompanyId" access="field">
            <key-property column="id" name="value" length="36" access="field"/>
        </composite-id>

        <component name="userId" class="ar.franciscoruiz.shared.domain.users.UserId" access="field">
            <property column="user_id" name="value" length="36" access="field"/>
        </component>

        <component name="companyId" class="ar.franciscoruiz.shared.domain.companies.CompanyId" access="field">
            <property column="company_id" name="value" length="36" access="field"/>
        </component>
    </class>
</hibernate-mapping>
