<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ar.franciscoruiz.accounts.permissions.domain.Permission" table="permissions">
        <composite-id name="id" class="ar.franciscoruiz.accounts.permissions.domain.PermissionId" access="field">
            <key-property column="id" name="value" length="36" access="field"/>
        </composite-id>

        <component name="entity" class="ar.franciscoruiz.accounts.permissions.domain.PermissionEntity" access="field">
            <property name="value" column="entity" type="java.lang.String" access="field"/>
        </component>

        <property name="create" column="create" type="java.lang.Boolean" access="field"/>
        <property name="update" column="update" type="java.lang.Boolean" access="field"/>
        <property name="delete" column="delete" type="java.lang.Boolean" access="field"/>
        <property name="read" column="read" type="java.lang.Boolean" access="field"/>
        <property name="readAll" column="read_all" type="java.lang.Boolean" access="field"/>
    </class>
</hibernate-mapping>
